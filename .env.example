# Application Configuration
APP_NAME=TimeKeeper API
APP_VERSION=0.1.0
DEBUG=True

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/timekeeper

# Redis (format: redis://:password@host:port/db)
REDIS_URL=redis://:your-redis-password@localhost:6379/0

# JWT Authentication
SECRET_KEY=your-secret-key-here-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Origins (comma separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Push Services - 极光推送 (JPush)
# 在 https://www.jiguang.cn/ 注册获取
JPUSH_APP_KEY=your-jpush-app-key
JPUSH_MASTER_SECRET=your-jpush-master-secret
JPUSH_ENABLED=false

# Voice Recognition (科大讯飞)
# ASR_APP_ID=
# ASR_API_KEY=

# LLM API (DeepSeek)
# LLM_API_KEY=
# LLM_API_URL=https://api.deepseek.com/v1

# ==================== SMS Configuration (短信配置) ====================
# 短信提供商: aliyun（阿里云）或 noop（仅日志，不实际发送）
# 开发环境建议使用 noop，生产环境使用 aliyun
SMS_PROVIDER=noop

# 阿里云短信配置（使用号码认证服务 - 个人测试模式）
# 控制台地址: https://dypns.console.aliyun.com/
# SDK: alibabacloud_dypnsapi20170525
# 注意：不要将实际密钥提交到代码仓库！

ALIYUN_ACCESS_KEY_ID=your-access-key-id
ALIYUN_ACCESS_KEY_SECRET=your-access-key-secret
SMS_SIGN_NAME=速通互联验证码
SMS_TEMPLATE_CODE=100001
SMS_REGION=cn-hangzhou

# 验证码配置（可选，使用默认值）
SMS_CODE_EXPIRE_SECONDS=300      # 验证码过期时间（秒），默认5分钟
SMS_RATE_LIMIT_SECONDS=60        # 发送间隔（秒），默认60秒

# 防刷限制配置（可选，使用默认值）
MAX_VERIFY_ATTEMPTS=5            # 单个验证码最多尝试次数
MAX_SMS_PER_PHONE_PER_DAY=10    # 每个手机号每天最多发送次数
MAX_SMS_PER_IP_PER_DAY=50       # 每个IP每天最多发送次数

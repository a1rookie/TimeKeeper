# Application Configuration
APP_NAME=TimeKeeper API
APP_VERSION=0.1.0
DEBUG=True

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/timekeeper

# Redis (format: redis://:password@host:port/db)
REDIS_URL=redis://:your-redis-password@localhost:6379/0

# JWT Authentication
SECRET_KEY=your-secret-key-here-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Origins (comma separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Push Services - 极光推送 (JPush)
# 在 https://www.jiguang.cn/ 注册获取
JPUSH_APP_KEY=your-jpush-app-key
JPUSH_MASTER_SECRET=your-jpush-master-secret
JPUSH_ENABLED=false

# ==================== 语音识别服务配置 (ASR) ====================
# 科大讯飞语音听写（主力 ASR 服务）
# 控制台: https://console.xfyun.cn/
# 价格: ¥0.003/次
XFYUN_APP_ID=your-xfyun-app-id
XFYUN_API_KEY=your-xfyun-api-key
XFYUN_API_SECRET=your-xfyun-api-secret
XFYUN_ENABLED=false

# 百度语音识别（备用 ASR 服务）
# 控制台: https://console.bce.baidu.com/ai/#/ai/speech/overview/index
BAIDU_APP_ID=your-baidu-app-id
BAIDU_API_KEY=your-baidu-api-key
BAIDU_SECRET_KEY=your-baidu-secret-key
BAIDU_ENABLED=false

# ASR 通用配置
ASR_TIMEOUT=10                   # ASR 请求超时时间（秒）
ASR_MAX_AUDIO_SIZE=5242880       # 最大音频大小（字节），默认 5MB

# ==================== 意图理解服务配置 (NLU) ====================
# DeepSeek-V3 大模型（用于解析用户意图）
# 控制台: https://platform.deepseek.com/
# 价格: ¥0.0005/次
DEEPSEEK_API_KEY=your-deepseek-api-key
DEEPSEEK_API_URL=https://api.deepseek.com/v1/chat/completions
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_ENABLED=false

# NLU 配置
DEEPSEEK_TIMEOUT=30              # NLU 请求超时时间（秒）
DEEPSEEK_MAX_TOKENS=500          # DeepSeek 最大生成 token 数
NLU_CONFIDENCE_THRESHOLD=0.7     # 意图识别置信度阈值

# ==================== SMS Configuration (短信配置) ====================
# 短信提供商: aliyun（阿里云）或 noop（仅日志，不实际发送）
# 开发环境建议使用 noop，生产环境使用 aliyun
SMS_PROVIDER=noop

# 阿里云短信配置（使用号码认证服务 - 个人测试模式）
# 控制台地址: https://dypns.console.aliyun.com/
# SDK: alibabacloud_dypnsapi20170525
# 注意：不要将实际密钥提交到代码仓库！

ALIYUN_ACCESS_KEY_ID=your-access-key-id
ALIYUN_ACCESS_KEY_SECRET=your-access-key-secret
SMS_SIGN_NAME=速通互联验证码
SMS_TEMPLATE_CODE=100001
SMS_REGION=cn-hangzhou

# 验证码配置（可选，使用默认值）
SMS_CODE_EXPIRE_SECONDS=300      # 验证码过期时间（秒），默认5分钟
SMS_RATE_LIMIT_SECONDS=60        # 发送间隔（秒），默认60秒

# 防刷限制配置（可选，使用默认值）
MAX_VERIFY_ATTEMPTS=5            # 单个验证码最多尝试次数
MAX_SMS_PER_PHONE_PER_DAY=10    # 每个手机号每天最多发送次数
MAX_SMS_PER_IP_PER_DAY=50       # 每个IP每天最多发送次数
